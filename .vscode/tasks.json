{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "shfmt",
      "type": "process",
      "command": "shfmt",
      "args": [
        "--apply-ignore",
        "--write",
        "${workspaceFolder}/go-bootstrap.sh"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "isBuildCommand": true,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "revealProblems": "onProblem",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
